<div class="container">
    <h1 class="text-center mt-4">All Users</h1>
    <table>
            <% @users.each do |user| %>
                <tr>
                    <td><%= user.username %></td> 
                    <td><%= pluralize(user.tasks.count, "task") %></td>
                    <td><%= link_to 'Edit Profile', edit_user_path(user) %></td>                   
                </tr>
                
            <% end %>
    </table>

</div>